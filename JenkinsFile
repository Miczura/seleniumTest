pipeline {
   agent any

   stages {
      stage('Test')  {
          steps{
              sh "mvn clean test -X"
          }
      }
    }
      post {
           always {
              script {
                  allure([
                       includeProperties: false,
                       jdk: '',
                       properties: [],
                       reportBuildPolicy: 'ALWAYS',
                       results: [[path: 'target/allure-results']]
                       ])
                  }
              }
           }
}